.ggj
  box-sizing: border-box
  display: flex
  height: 100%

  *
    box-sizing: border-box
  
  &-map
    flex-grow: 1
    
  &-control
    background: #fff
    position: relative
    
    &__content
      width: 300px
      height: 100%
      overflow-y: auto
      padding: 10px
      position: relative
      z-index: 1
      
      .ggj_control_hidden &
        display: none
    
    &__trigger
      position: absolute
      z-index: 2
      left: -80px
      top: 40px

  &-ctrl-trigger
    font-size: 10px
    background: #fff
    padding: 15px 10px
    width: 80px
    cursor: pointer
    
    .ggj_control_hidden &
      opacity: 0.7
    
    .ggj_control_hidden &:hover
      opacity: 1
    
    &__show
      display: none
      .ggj_control_hidden &
        display: block
    
    &__hide
      
      .ggj_control_hidden &
        display: none
  
  &-drawings
    margin 0
    padding 0
    list-style-type none
    &__item
      margin-bottom 5px
      padding 5px 5px
      border 1px solid lighten(#ccc, 50%)
      &_hover
      &:hover
        background-color rgba(0, 0, 0, 0.1)
  
  &-drawing
    &__editor
      display none
      ^[0]-drawings__item_editor-active &
        display block
  
  &-dweditor-prop
    margin-top 0
  
  &-dwtool
    &__btn
      &[data-btn="drawing-hide-properties"]
        display none
        ^[0]-drawings__item_editor-active &
          display inline-block
      &[data-btn="drawing-show-properties"]
        ^[0]-drawings__item_editor-active &
          display none
/* widget - brush */
.ggj-brush__btn_active
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5)
  